                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Library</a>
                    <button
                        class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                    >
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <div class="dropdown">
                                <button
                                    class="btn dropdown-toggle"
                                    type="button"
                                    id="dropdownMenuButtonClient"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    style="
                                        padding-left: 8px;
                                        padding-bottom: 8px;
                                        padding-right: 8px;
                                        padding-top: 8px;
                                        border-right-width: 0px;
                                        border-top-width: 0px;
                                        border-left-width: 0px;
                                        border-bottom-width: 0px;
                                    "
                                >
                                    Client
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonClient">
                                    <li>
                                        <a 
                                            class="dropdown-item" 
                                            asp-area="" 
                                            asp-controller="Client" 
                                            asp-action="ClientList"
                                        > 
                                            Client List
                                        </a>
                                    </li>
                                    <li>
                                        <a 
                                            class="dropdown-item" 
                                            asp-area="" 
                                            asp-controller="Client" 
                                            asp-action="NewClient"
                                        >
                                            New Client 
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="dropdown">
                                <button
                                    class="btn dropdown-toggle"
                                    type="button"
                                    id="dropdownMenuButtonAuthor"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    style="
                                        padding-left: 8px;
                                        padding-bottom: 8px;
                                        padding-right: 8px;
                                        padding-top: 8px;
                                        border-right-width: 0px;
                                        border-top-width: 0px;
                                        border-left-width: 0px;
                                        border-bottom-width: 0px;
                                    "
                                >
                                    Author
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAuthor">
                                    <li>
                                        <a 
                                            class="dropdown-item" 
                                            asp-area="" 
                                            asp-controller="Author" 
                                            asp-action="AuthorList"
                                        > 
                                            Author List
                                        </a>
                                    </li>
                                    <li>
                                        <a 
                                            class="dropdown-item" 
                                            asp-area="" 
                                            asp-controller="Author" 
                                            asp-action="NewAuthor"
                                        >
                                            New Author 
                                        </a>
                                    </li>
